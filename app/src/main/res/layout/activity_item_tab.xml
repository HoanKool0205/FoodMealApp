<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.ItemTabActivity">

    <!-- Nút Back -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/back"/>

    <!-- Tên món ăn -->
    <TextView
        android:id="@+id/tvNameFood"
        android:textSize="@dimen/_28sdp"
        android:fontFamily="@font/yeonsung_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Tên món ăn"/>

    <!-- Hình ảnh món ăn -->
    <ImageView
        android:id="@+id/imgFood"
        android:foregroundGravity="center"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginRight="@dimen/_24sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        app:layout_constraintTop_toBottomOf="@id/tvNameFood"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_background"/>

    <!-- Chi tiết sản phẩm -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_16sdp"
        android:layout_margin="@dimen/_14sdp"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@+id/btn_AddCart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgFood"
        tools:text="Mô tả chi tiết về món ăn này." />

    <!-- Nút Order -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_AddCart"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/yeonsung_regular"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/layout_next"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_width="@dimen/_185sdp"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>
